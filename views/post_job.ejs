<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <title>Dashboard</title>

    <%- include('./snippets/adminHeader.ejs') %>
  </head>
  <body>

    <%- include('./snippets/svg.ejs') %>

    <div class="container-fluid">
      <div class="row">
       <%- include('./snippets/adminSidebar.ejs') %>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <div class="container mt-5 mb-5">
            <div class="row justify-content-center">
              <div class="col-lg-8">
                <div class="card shadow">
                  <div class="card-body">
                    <h4 class="card-title text-center mb-4 fw-bold text-primary">Post a Job</h4>

                    <form id="jobPostForm">
                      <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="jobTitle" placeholder="Enter job title">
                        <label>Enter job title</label>
                        <div class="jobTitleErr text-danger text-center"></div>
                      </div>

                      <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="eduRequirement" placeholder="Enter Educational Requirements">
                        <label>Educational Requirements</label>
                        <div class="eduRequirementErr text-danger text-center"></div>
                      </div>

                      <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="jobExperience" placeholder="Type Job Experience">
                        <label>Job Experience</label>
                        <div class="jobExperienceErr text-danger text-center"></div>
                      </div>

                      <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="skills" placeholder="Skills Requirements">
                        <label>Required Skills</label>
                        <div class="skillsErr text-danger text-center"></div>
                      </div>
                        
                      <button type="submit" class="btn btn-primary w-100 fw-bold">Post Job</button>

                    </form>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </main>
      </div>
    </div>

    <%- include('./snippets/adminScripts.ejs') %>
    <script src="/validations/post_job.js"></script>
  </body>
</html>
