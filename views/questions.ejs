<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <title>Questions</title>

    <%- include('./snippets/adminHeader.ejs') %>
  </head>
  <body>

    <%- include('./snippets/svg.ejs') %>

    <div class="container-fluid">
      <div class="row">
       <%- include('./snippets/adminSidebar.ejs') %>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="text-center mt-5 text-primary">
                <h4 class="fw-bold fs-4 display-1">All Questions</h4>
            </div>
            <table id="example" class="table small table-sm table-striped mt-5" style="width:100%">
                <thead>
                    <tr>
                        <th>Questions</th>
                        <th>A</th>
                        <th>B</th>
                        <th>C</th>
                        <th>D</th>
                        <th>Correct Answer</th>
                        <!-- <th>Actions</th> -->
                    </tr>
                </thead>
                <tbody>
                    <% var context %>
                    <% if (context.questions) { %>
                     <% context.questions.forEach(question => { %>
                     <tr>
                         <td><%=question.question %></td>
                         <!-- <td> -->
                            <% question.options.forEach(option => { %>
                                <td><%= option %></td>
                            <% }) %>
                        <!-- </td> -->
                        <td><%=question.correctAnswer %></td>
                         <!-- <td class="d-flex">
                            <button class=" btn btn-sm btn-outline-primary me-2" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                            <button type="button" class=" btn btn-sm btn-outline-danger" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash"></i></button>
                        </td>  -->
                     </tr>
                     <% }) %>
                    <% } %>
                 </tbody>
            </table>
        </main>
      </div>
    </div>

    <%- include('./snippets/adminScripts.ejs') %>
   
  </body>
</html>
